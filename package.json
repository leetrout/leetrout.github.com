  },
  "homepage": "https://github.com/leetrout/leetrout.github.com#readme",
  "devDependencies": {
    "esbuild": "0.16.15",
    "prettier": "^2.8.2",
    "tailwindcss": "^3.2.4"
  },
  "dependencies": {
    "alpinejs": "^3.10.5"
  }
}
